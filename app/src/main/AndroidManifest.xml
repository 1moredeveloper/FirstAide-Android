        <activity
            android:name="com.pcsa.views.reporting.Steps"
            android:label="@string/title_activity_steps" >
        </activity>
        <activity
            android:name="com.pcsa.views.reporting.FAQ"
            android:label="@string/title_activity_faq" >
        </activity>
        <activity
            android:name="com.pcsa.views.reporting.Confidentiality"
            android:label="@string/title_activity_confidentiality" >
        </activity>
        <activity
            android:name="com.pcsa.views.reporting.Resources"
            android:label="@string/title_activity_resources" >
        </activity>
        <activity
            android:name="com.pcsa.views.reporting.ContactPostStaff"
            android:label="@string/title_activity_contact_post_staff" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.CALL_PHONE" />
</manifest>
